{
    "files.autoSave": "afterDelay",
    "editor.fontFamily": "'DroidSansMono Nerd Font', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.tabSize": 2,
    "editor.renderWhitespace": "boundary",
    "editor.insertSpaces": true,
    "workbench.iconTheme": "vscode-icons",
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // C++
    "C_Cpp.autoAddFileAssociations": true,
    "C_Cpp.autocomplete": "Default",
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "C_Cpp.clang_format_path": "/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.errorSquiggles": "Enabled",
    "C_Cpp.exclusionPolicy": "checkFolders",
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.intelliSenseEngineFallback": "Enabled",
    "C_Cpp.loggingLevel": "Warning",
    "C_Cpp.navigation.length": 80,
    "C_Cpp.workspaceParsingPriority": "high"

}
